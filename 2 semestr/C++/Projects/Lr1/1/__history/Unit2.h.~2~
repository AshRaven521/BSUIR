class RectangleMy
  {
	  public:
		  int xRect1;
		  int yRect1;
		  int xRect2;
		  int yRect2;
		  int x1;
		  int y1;

	  public:
		void show(TCanvas *Canvas);
		void move(TCanvas *Canvas);
		void hide (TCanvas *Canvas);
		void moveBack(TCanvas *Canvas);

		RectangleMy(int a,int b,int c,int d);

  };

class flagman : public RectangleMy
  {
	  public:
		  flagman();
