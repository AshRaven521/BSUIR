#pragma hdrstop

#include "Unit6.h"
#include <math.h>

   double kvadrat::calc_square()
	 {
		 double s=pow(AB,2);

		 return s;
	 }

   double kvadrat::calc_perimetr()
	 {
		 double p=AB * 4;

		 return p;
	 }

   void kvadrat::mass_centre(int &x0,int &y0)
	 {
		x0=AB/2;
		y0=AB/2;
	 }

   void kvadrat::move_mass_centre(int x0,int y0)
	 {
		 x=x0;
		 y=y0;
     }

