<Page x:ConnectionId='1'
    x:Class="uwp_test.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwp_test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:uwp_test.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1018" Height="751"
    >
    <Grid Height="741" VerticalAlignment="Top">
        <GridView x:ConnectionId='2'                               
                  Height="500" Width="430"
                  BorderBrush="Blue" BorderThickness="5"
                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0">
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <Grid x:ConnectionId='22' BorderBrush="Black" BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:ConnectionId='23' Height="25" Margin="0,0,0,0" FontSize="12"                    />
                        <TextBlock x:ConnectionId='24' Height="25" Margin="0,0,0,0" FontSize="12"                      Grid.Column="1"/>
                        <TextBlock x:ConnectionId='25' Height="25" Margin="0,0,0,0" FontSize="12"                          Grid.Column="2" />
                        <TextBlock x:ConnectionId='26' Height="25" Margin="0,0,0,0" FontSize="12"                           Grid.Column="3"/>
                        <TextBlock x:ConnectionId='27' Height="25" Margin="0,0,0,0" FontSize="12"                            Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <Grid>
            <Button x:ConnectionId='3' x:Name="distanceButton" Height="35" 
                Margin="34,549,0,0" 
                Content="Рассчитать расстояние и время"
                                             VerticalAlignment="Top"/>
            <Button x:ConnectionId='4' x:Name="clusterizationButton" Height="35" 
                Margin="41,697,0,0"
                Content="Кластеризовать Метод1"
                                                   
                VerticalAlignment="Top"/>
            <ComboBox x:ConnectionId='5' Name="clusterNumberComboBox" Height="30"
                  Margin="740,21,0,0"
                                                                           
                  RenderTransformOrigin="4.491,0.417"/>
            <TextBlock Text="Номер кластера :"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
               Margin="624,20,0,0"
                   Height="30"/>
            <TextBlock Text="Количество кластеров:"
                   HorizontalAlignment="Left"
                   Margin="28,605,0,0" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='6' HorizontalAlignment="Left"
                 Height="30" 
                 Margin="182,600,0,0" TextWrapping="Wrap" Text="3" 
                 VerticalAlignment="Top"
                 Width="50"
                 Name="clusterNumberTextBox" />

            <TextBlock Text="Максимальное время:"
                   HorizontalAlignment="Left"
                   Margin="28,641,0,0" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='7' HorizontalAlignment="Left"
                 Height="30" 
                 Margin="182,638,0,0" TextWrapping="Wrap" Text="2" 
                 VerticalAlignment="Top"
                 Width="50"
                 Name="maxTimeTextBox" />

            <TextBlock Text="Город:"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="283,594,0,0"
                   Height="30"/>
            <!--ComboBox Name="cityComboBox" Height="30" Width="250"
                  Margin="283,618,0,0"
                  SelectionChanged="clusterNumberComboBox_SelectionChanged"
                  RenderTransformOrigin="4.491,0.417"/-->
            <ComboBox x:ConnectionId='8' Name="cityComboBox" ItemsSource="{Binding}" Height="30" Width="250"
                  Margin="283,618,0,0"
                  RenderTransformOrigin="4.491,0.417">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <CheckBox x:ConnectionId='9' Name="cityTypeCheckBox"
                      Margin="244,592,0,0" VerticalAlignment="Top"
                      IsChecked="False" 
                                                                                               />

            <GridView x:ConnectionId='10' x:Name="clusterInfoGrid"                                  
                  Height="460" Width="430"
                  BorderBrush="Blue" BorderThickness="2"
                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="519,73,0,0">
                <GridView.ItemTemplate>
                    <DataTemplate                             >
                        <Grid x:ConnectionId='15' BorderBrush="Black" BorderThickness="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='16' Height="25" Margin="0,0,0,0" FontSize="12"                       />
                            <TextBlock x:ConnectionId='17' Height="25" Margin="0,0,0,0" FontSize="12"                       Grid.Column="1" />
                            <TextBlock x:ConnectionId='18' Height="25" Margin="0,0,0,0" FontSize="12"                          Grid.Column="2"/>
                            <TextBlock x:ConnectionId='19' Height="25" Margin="0,0,0,0" FontSize="12"                      Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <TextBlock x:ConnectionId='11' Text="Центроид кластера :"
                   HorizontalAlignment="Left" 
                   Margin="525,570,0,0"
                   VerticalAlignment="Top"
                   Name="clusterInfo"/>
            <Button x:ConnectionId='12' Content="Открыть карты" 
                VerticalAlignment="Top" 
                Width="140" 
                Margin="700,660,0,0" Height="35"
                Name="showMapButton"                            />
            <Button x:ConnectionId='13' x:Name="clusterizationButtonTest" Height="35" 
                Margin="242,697,0,0"
                Content="Кластеризовать Метод2"                 
                VerticalAlignment="Top"                                       />
        </Grid>
    </Grid>
</Page>

