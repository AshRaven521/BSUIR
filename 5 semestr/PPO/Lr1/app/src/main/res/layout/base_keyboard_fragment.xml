<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_grid_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:columnCount="4"
    android:configChanges="orientation|screenSize"
    android:rowCount="5">

    <Button
        android:id="@+id/clear_button"
        style="@style/Button.Op"
        android:text="CL"
        android:textSize="16sp"
        app:rippleColor="#E91E63" />

    <Button
        android:id="@+id/open_br"
        style="@style/Button.Op"
        android:text="("
        android:textSize="16sp" />

    <Button
        android:id="@+id/close_br"
        style="@style/Button.Op"
        android:text=")"
        android:textSize="16sp" />

    <Button
        android:id="@+id/div_op"
        style="@style/Button.Grad"
        android:text="/"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_7"
        style="@style/Button"
        android:text="7"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_8"
        style="@style/Button"
        android:text="8"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_9"
        style="@style/Button"
        android:text="9"
        android:textSize="16sp" />

    <Button
        android:id="@+id/mul_op"
        style="@style/Button.Grad"
        android:text="*"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_4"
        style="@style/Button"
        android:text="4"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_5"
        style="@style/Button"
        android:text="5"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_6"
        style="@style/Button"
        android:text="6"
        android:textSize="16sp" />

    <Button
        android:id="@+id/sub_op"
        style="@style/Button.Grad"
        android:text="-"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_1"
        style="@style/Button"
        android:text="1"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_2"
        style="@style/Button"
        android:text="2"
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_3"
        style="@style/Button"
        android:text="3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/add_op"
        style="@style/Button.Grad"
        android:text="+"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dot_b"
        style="@style/Button"
        android:text="."
        android:textSize="16sp" />

    <Button
        android:id="@+id/num_b_0"
        style="@style/Button"
        android:text="0"
        android:textSize="16sp" />

    <Button
        android:id="@+id/del_op"
        style="@style/Button"
        android:text="DEL"
        android:textSize="16sp" />

    <Button
        android:id="@+id/res_op"
        style="@style/Button.Grad"
        android:text="="
        android:textSize="16sp" />

</GridLayout>